{% extends 'base.html.twig' %}
{% block title %}Episodes - Rick and Morty{% endblock %}
{% block content %}
    <div class="container mx-auto columns-3">
        {% for episode in episodes %}

            <a href="#"
               class="flex flex-col items-right bg-white border border-gray-200 rounded-lg shadow md:flex-row md:max-w-xl hover:bg-gray-100 dark:border-gray-700 dark:bg-gray-800 dark:hover:bg-gray-700">
                <div class="flex flex-col justify-between p-4 leading-normal">
                    <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white">{{ episode.episodeName }}</h5>
                    <p class="mb-3 font-normal text-white-700 dark:text-gray-400">
{{ episode.episodeNumber }}
                        <br>
                        Characters in episode:
                        <br>
                        {% for character in episode.getCharacters %}
                            <span> -{{ character }}- </span>
                        {% endfor %}
                    </p>
                </div>
            </a>
            <br>
        {% endfor %}

    </div>
{% endblock %}